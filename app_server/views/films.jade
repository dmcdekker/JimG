                .item
                  iframe(src='https://player.vimeo.com/video/32331105', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item3')  
                .item
                  iframe(src='https://player.vimeo.com/video/146865203', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item4')
                .item
                  iframe(src='https://player.vimeo.com/video/7842372', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item4')
                .item
                  iframe(src='https://player.vimeo.com/video/7789499', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item6')
                .item  
                  iframe(src='https://player.vimeo.com/video/7842838', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item7')
                .item  
                  iframe(src='https://player.vimeo.com/video/7875292', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item8')
  
              
          a.left.carousel-control(href='#gallery', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href='#gallery', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right
          br
          button.btn.btn-secondary(type='btn', data-dismiss='modal') x
          
          
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(type='text/javascript').
      $(document).ready(function(){
      $('.glyphicon-chevron-down').click(function(){
      $("p.card-text").slideToggle();
      $(this).toggleClass("glyphicon-chevron-down").toggleClass("glyphicon-chevron-up");
      });
      });
      
    script(type='text/javascript').
      $(document).ready(function(){
      $('#showall').click(function(){
      $('.targetDiv').show();
      });
        
      $('#films_button').click(function(){
      $('.targetDiv').hide();
      $('#film1, #film2, #film3, #film4, #film5, #film6, #film7, film8').show();
      });
      
      $('#documentary_button').click(function(){
      $('.targetDiv').hide();
      $('#documentary1, #documentary2').show();
      }); 
        
        

       
      });
      
   