extends layout

block content
  .container
   .row
    .page-header
      h3 Recent Work
      .row
       .col-lg-12
        .col-lg-4.col-sm-4
          a(href='#gallery', data-slide-to='0')
            img.thumbnail.img-responsive(src='./images/slug.jpg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-4
          a(href='#gallery', data-slide-to='1')
            img.thumbnail.img-responsive(src='./images/angels.jpg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-4
          a(href='#gallery', data-slide-to='2')
            img.thumbnail.img-responsive(src='./images/so_long.jpeg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-4
          a(href='#gallery', data-slide-to='3')
            img.thumbnail.img-responsive(src='./images/dream.jpeg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-4
          a(href='#gallery', data-slide-to='4')
            img.thumbnail.img-responsive(src='./images/designated_routes.jpeg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-4
          a(href='#gallery', data-slide-to='5')
            img.thumbnail.img-responsive(src='./images/urban.jpg', data-toggle='modal', data-target='#myModal')    
      
      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            #gallery.carousel.slide(data-interval='false')
              .carousel-inner
                .item.active
                  iframe(src='https://www.youtube.com/embed/HTO55LIzky8', width='640', height='480', frameborder='0', allowfullscreen='', alt='item1')
