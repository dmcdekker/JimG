extends layout

block content
  .container
   .row
    .page-header
      h3 Typography
      .row
        .col-lg-4.col-sm-6
          a(href='#gallery', data-slide-to='0')
            img.thumbnail.img-responsive(width='560', height='315', src='./images/slug.jpg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-6
          a(href='#gallery', data-slide-to='1')
            img.thumbnail.img-responsive(width='560', height='315', src='./images/angels.jpg', data-toggle='modal', data-target='#myModal')
        .col-lg-4.col-sm-6
          a(href='#gallery', data-slide-to='2')
            img.thumbnail.img-responsive(width='560', height='315', src='http://res.cloudinary.com/dmcdekker/image/upload/v1471463622/Denise%20Website/mistake_m46qkb.jpg', data-toggle='modal', data-target='#myModal')
