      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            #gallery.carousel.slide(data-interval='false')
              .carousel-inner
                .item.active
                  iframe(width='560', height='315', src='https://www.youtube.com/embed/HTO55LIzky8', frameborder='0', allowfullscreen='', alt='item1')
                .item
                  iframe( width='660', height='360', src='https://player.vimeo.com/video/63921781', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='', alt='item1')
                .item
                  img(width='560', height='315', src='http://res.cloudinary.com/dmcdekker/image/upload/v1471463622/Denise%20Website/mistake_m46qkb.jpg', alt='item2')
                .item
                  img(width='560', height='315', src='http://res.cloudinary.com/dmcdekker/image/upload/c_scale,h_435,w_648/v1471463622/Denise%20Website/experiment_uxk08m.jpg', alt='item3')
                .item
                  img(width='560', height='315', src='http://res.cloudinary.com/dmcdekker/image/upload/c_scale,h_435,w_648/v1471463621/Denise%20Website/listen2_ew4u7f.jpg', alt='item4')
              
          a.left.carousel-control(href='#gallery', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href='#gallery', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right
          br
          button.btn.btn-secondary(type='btn', data-dismiss='modal') x